{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "declarationDir": "./dist/types",
    "declaration": true,
    "baseUrl": ".",
    "rootDir": "..",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}